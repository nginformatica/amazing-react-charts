{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "target": "es6",
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": [
        "./src/**/*",
        "./src/core/disableControls.ts"
    ]
}
