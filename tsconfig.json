{
    "compilerOptions": {
        "outDir": "./dist/",
        "jsx": "react",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "types": ["node"]
    },
    "include": [
        "./src/**/*",
        "./src/core/disableControls.ts"
    ]
}
